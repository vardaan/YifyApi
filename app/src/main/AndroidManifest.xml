<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hplaptop.yifyapi" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.hplaptop.yifyapi.UpcomingMovies"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hplaptop.yifyapi.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.hplaptop.yifyapi.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.hplaptop.yifyapi.MovieListActivity"
            android:label="@string/title_activity_movie_list" >
        </activity>
        <activity
            android:name="com.example.hplaptop.yifyapi.MovieListFilterActivity"
            android:label="@string/title_activity_movie_list_filter"
            android:parentActivityName="com.example.hplaptop.yifyapi.MovieListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hplaptop.yifyapi.MovieListActivity" />
        </activity>
    </application>

</manifest>
